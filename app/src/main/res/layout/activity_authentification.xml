<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e8dd"
    tools:context=".android_app_activity.AuthentificationActivity" >



    <EditText
        android:layout_width="440px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:id="@+id/pseudo"
        android:hint="pseudo"
        android:inputType="textVisiblePassword|textNoSuggestions"
        />

   

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/table_background">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:background="@drawable/table"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:drawableLeft="@drawable/avataricn2"
            android:id="@+id/zoneEchange2"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            />

        <Button
            android:drawableLeft="@drawable/avataricn3"
            android:id="@+id/zoneEchange3"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_marginLeft="60dp"/>

        <Button
            android:id="@+id/zoneEchange4"
            android:drawableLeft="@drawable/avataricn4"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:drawableLeft="@drawable/avataricn5"
            android:id="@+id/zoneEchange5"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            />

        <Button
            android:drawableLeft="@drawable/avataricn6"
            android:id="@+id/zoneEchange6"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_marginLeft="60dp"/>

        <Button
            android:drawableLeft="@drawable/avataricn7"
            android:id="@+id/zoneEchange7"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

    <Button
        android:drawableTop="@drawable/avataricn0"
        android:id="@+id/zoneEchange0"
        android:layout_width="55dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corner_grey"
      />

    <Button
        android:drawableTop="@drawable/avataricn1"
        android:id="@+id/zoneEchange1"
        android:layout_width="55dp"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corner_grey"
        />


</RelativeLayout>
</LinearLayout>

    <Button
        android:layout_width="300px"
        android:layout_height="60px"
        android:layout_gravity="center"
        android:id="@+id/loginbtn"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_corner_blue"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="Se connecter"
        android:textSize="20dp"
        android:textStyle="bold"/>




    </LinearLayout>