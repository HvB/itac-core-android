<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zp_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e8dd"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".android_app_activity.EspacePersonnelActivity">


    <RelativeLayout
        android:id="@+id/zep_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">


        <ImageButton
            android:id="@+id/login_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/login"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/avatarlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/pseudo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView
            android:id="@+id/artifactZEPLayout"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_logout_btn"
            android:layout_toRightOf="@id/avatarlayout">

            <GridView
                android:id="@+id/listArtifactZEPView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:columnWidth="100dp"
                android:drawSelectorOnTop="true"
                android:focusable="true"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView>
    </RelativeLayout>


    <fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView
        android:id="@+id/listArtifactLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="5dp">

        <GridView
            android:id="@+id/listArtifactView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />


    </fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView>


    <RelativeLayout
        android:id="@+id/artifact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:background="#007fff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="Exit"
            android:padding="5dp"
            android:src="@drawable/exit"></ImageButton>

        <EditText
            android:id="@+id/titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exit_button"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="Titre"
            android:maxLines="1"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_below="@id/titre"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="Message"
            android:inputType="text" />


        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/message_input"
            android:background="@null"
            android:contentDescription="Send"
            android:padding="5dp"
            android:src="@drawable/sent"></ImageButton>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/addArtifact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"

            android:src="@drawable/images"></ImageButton>

        <ImageButton
            android:id="@+id/buttonLoadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/addArtifact"
            android:background="@null"

            android:src="@drawable/gallery"></ImageButton>

        <ImageButton
            android:id="@+id/buttonTakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/buttonLoadPicture"
            android:background="@null"
            android:src="@drawable/camera"></ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/trashEditLayout"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/buttonTakePicture">

                <ImageButton
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:background="@null"
                    android:src="@drawable/edit"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trashLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:background="@null"
                    android:src="@drawable/trash"></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

