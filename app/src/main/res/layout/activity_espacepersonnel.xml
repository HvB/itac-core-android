<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context=".android_app_activity.EspacePersonnelActivity">

    <LinearLayout
        android:id="@+id/zp_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/partage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/partage">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="  Zone de partage  " />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/zep_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/zp_Layout">


        <ImageButton
            android:id="@+id/login_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/login"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/avatarlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/pseudo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView
            android:id="@+id/artifactZEPLayout"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_logout_btn"
            android:layout_toRightOf="@id/avatarlayout">

            <GridView
                android:id="@+id/listArtifactZEPView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:columnWidth="100dp"
                android:horizontalSpacing="8dp"
                android:drawSelectorOnTop="true"
                android:focusable="true"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView>
    </RelativeLayout>


    <fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView
        android:id="@+id/listArtifactLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/zep_layout"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <GridView
            android:id="@+id/listArtifactView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:gravity="center"
            android:horizontalSpacing="8dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />


    </fr.learning_adventure.android.itac.widget.LinearLayoutAbsListView>


    <RelativeLayout
        android:id="@+id/artifact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listArtifactLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="invisible">


        <EditText
            android:id="@+id/titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:hint="Titre"
            android:textSize="25dp"
            android:maxLines="1"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_below="@id/titre"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="Message"

            android:inputType="text" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="Exit"
            android:drawableLeft="@drawable/exit"
            android:text="Annuler"
            android:textStyle="bold"
            android:layout_below="@+id/message_input"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="30dp"
            android:padding="5dp">
            </Button>


        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_input"
            android:background="@null"
            android:contentDescription="Send"
            android:drawableLeft="@drawable/check"
            android:layout_toRightOf="@+id/exit_button"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="Valider"
            android:textStyle="bold"
            >

                       </Button>

        <Button
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/send_modified_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/exit_button"
            android:layout_below="@+id/message_input"
            android:background="@null"
            android:contentDescription="Send"
            android:text="Valider"
            android:drawableLeft="@drawable/check"
            android:visibility="gone"
            android:textStyle="bold"
            >

        </Button>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/optionsArtifactLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/artifact"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/addArtifact"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/article_add"
            android:text=" Ajouter un article  "
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_blue">
            </Button>

        <Button
            android:id="@+id/buttonLoadPicture"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/addArtifact"
            android:background="@drawable/rounded_corner_blue"
            android:text=" Charger une image "
            android:drawableLeft="@drawable/picture_download"
            ></Button>

        <Button
            android:id="@+id/buttonTakePicture"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="75px"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonLoadPicture"
            android:background="@drawable/rounded_corner_blue"
            android:drawableLeft="@drawable/camera"
            android:text=" Prendre une photo "></Button>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/trashEditLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artifact"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"

                android:background="@null"
                android:src="@drawable/edit"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text=" Modifier" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trashLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <ImageButton
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"

                android:background="@null"
                android:src="@drawable/trash"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Supprimer" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

